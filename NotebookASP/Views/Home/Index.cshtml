@model IEnumerable<Note>

<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Фамилия
                </th>
                <th>
                    Имя
                </th>
                <th>
                    Отчество
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@note.ID">@note.ID</a>
                    </td>
                    <td>
                        @note.LastName
                    </td>
                    <td>
                        @note.FirstName
                    </td>
                    <td>
                        @note.MiddleName
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>